<%= form_for (@timer) do |f| %>
  <ul>
  <% @timer.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :client %><br />
    <%= f.text_field :client %>
  </p>
  <p>
    <%= f.label :task %><br />
    <%= f.text_area :task %>
  </p>
  <p>
    <%= f.label :time_spent %><br />
    <%= f.text_field :time_spent %>
  </p>
  <p>Format: 0.8 or 3.2</p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>